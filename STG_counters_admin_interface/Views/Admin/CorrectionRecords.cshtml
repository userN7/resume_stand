@model int
@if (Model!=-2)
{
	var msg = "";
	if (Model==-1)
	{
		msg = "Произошли ошибки";
	}
	else
	{
		msg = $"Затронуто строк {Model}";
	}
	<h4>@msg</h4>
}
<form asp-action="Action_handler">
	@Html.PartialAsync("Time_Filters").Result
	<script>
		onSelChange = function (event) {


			if ($("#action_number option:selected").val() == 7) document.getElementById("selYears").hidden = false
			else document.getElementById("selYears").hidden = true



		}
	</script>
	<select name="action_number" id="action_number" class="custom-select w-25" onchange="onSelChange(event)">
		<option value="1"> Заполнить Cache_TagDump</option>
		@*<option value="2"> Заполнить fill_AverageSpeed</option>*@
		<option value="3"> Заполнить таблицу CSP_ByDay</option>
		<option value="4"> Заполнить таблицу CSP_ByMonth</option>
		<option value="8"> Заполнить таблицу CSP_ByShifts</option>
		<option value="5"> Уточнить таблицу CSP_ByDay с распределением пустого времени в зависимости от параметра</option>
		<option value="6"> Уточнить таблицу CSP_ByMonth с распределением пустого времени в зависимости от параметра</option>
		<option value="9"> Уточнить таблицу CSP_ByShifts в пределах сменн</option>
		<option value="7"> Заполнить TER_avg_permonth</option>
		<option value="11"> Заполнить влажность и жидкий поток для CSP_ByShifts</option>
		<option value="13"> Обновить ср. скорость в таблице CSP_ByShifts </option>
		<option value="14"> Обновить ср. скорость в таблице CSP_ByDay </option>
		<option value="15"> Обновить ср. скорость в таблице CSP_ByMonth </option>
		<option value="16"> Заполнить таблицы CSP_ByDay, CSP_ByMonth, CSP_ByShifts </option>
	</select>
	@Html.PartialAsync("tesYear").Result
	<br />
	<button class="btn btn-primary" type="submit">Выполнить</button>
</form>
