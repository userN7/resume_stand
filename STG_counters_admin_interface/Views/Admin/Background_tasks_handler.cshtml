@model List<string>

@{
	var list_timers = (List<string>)ViewData["list_timers"];
	var list_timers_names = (List<string>)ViewData["list_timers_names"];
}
@if (list_timers!=null)
{
	<form method="post" asp-action="Background_tasks_handler">
		<select name="taskName" class="custom-select w-50">
			@for (int i = 0; i < list_timers.Count - 1; i++)
			{
				<option  value="@list_timers_names[i]">@list_timers[i]</option>
			}
		</select>
		<input type="hidden" name="actionName" value="task_start"/>
		<br />
		<button class="btn btn-primary" type="submit" >Отправить</button>
	</form>
}
